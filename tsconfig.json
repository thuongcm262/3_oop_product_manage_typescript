{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",               
    "rootDir": "./src",                 
    "outDir": "./dist",                 
    "strict": true,                     
    "esModuleInterop": true,            
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "moduleResolution": "node"
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"],
  "plugins": [{ "transform": "tsc-alias" }]
}
